<h1><%= @task.title%></h1>
<ul>
<li><%= @task.details%></li>
<li><%= @task.completed%></li>
</ul>
<%= link_to "Back to list", tasks_path %>
<%= link_to "Edit task", task_edit_path %>

<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
